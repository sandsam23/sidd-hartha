---
import NavLinks from "../components/NavLinks.astro";
import Footer from "../components/Footer.astro";
import "../styles/farben.css";
import "../styles/font.css";
import "../styles/style.css";
export interface Props {
   url?: string;
   title?: string;
   // ? bedeutet, dass die Prop optional ist. external=Ã¶ffnen in neuem Tab.
   external?: boolean;
}

const { url, title, external } = Astro.props;
---

<!doctype html>
<html lang="de">
   <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width,initial-scale=1.0" />
      <title>baum-blatt</title>
   </head>
   <body>
      <header class="bg-slate-700">
         <nav>
            <ul>
               <NavLinks url1={url} title1={title} class1="link-blue" />
            </ul>
         </nav>
      </header>
      <main class="bg-red-950">
         <slot />
      </main>
      <footer>
         <Footer
            url1="#"
            title1="[Hoch]"
            external={false}
            url2="mailto:padra@mailbox.org"
            title2="[padra@mailbox.org]"
            external={true}
         />
      </footer>
   </body>
</html>
