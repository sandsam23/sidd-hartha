---
export interface Props {
   url?: string;
   style?: string;
   // ? bedeutet, dass die Prop optional ist. external=Ã¶ffnen in neuem Tab.
   external?: boolean;
}

const { url, style, external } = Astro.props;
---

<a
   href={url}
   target={external ? "_blank" : undefined}
   rel={external ? "noopener noreferrer" : undefined}
   ><img style={style} class="seiten-img" src={url} /></a
>
